#:include connected.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Image:
            source: './images/aviance.png'
            size_hint: [.8, .8]
            pos_hint: {'center_x': .5}

        BoxLayout:
            orientation: 'vertical'
            background_color: 1,1,1,1
            size_hint: [.5, .5]
            pos_hint: {'center_x': .5}

            Label:
                text: 'Login'
                font_size: 30
                halign: 'left'
                color: 0, 0, 0, 1

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            size_hint: [.5, .5]
            pos_hint: {'center_x': .5}

            Label:
                text: 'Password'
                halign: 'left'
                font_size: 30
                color: 0, 0, 0, 1

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Login system'
            font_size: 24
            size_hint: [.5, .5]
            pos_hint: {'center_x': .5}

            on_press: root.do_login(login.text, password.text)