#: kivy 2.0.0
<Connected>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.width, root.height

        BoxLayout:
            canvas:
                Color: 
                    rgba: 89,56,0,1
                Rectangle:
                    size: self.size

            orientation: 'vertical'
            size_hint: (0.3, 1)

            Button:
                text: "Hello World"

            Button:
                text: "Hello World"
                
            Button:
                text: "Hello World"


        BoxLayout:
                
            orientation: 'vertical'

            StackLayout:
                orientation: 'lr-tb'
                spacing: 20
                padding: 10

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .10]
                    
                    Label:
                        text: 'ULD NUMBER'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: uld_number
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .10]
                    
                    Label:
                        text: 'STATION CODE'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: station_code
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .10]
                    
                    Label:
                        text: 'DESTINATION CODE'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: destination_code
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .10]
                    
                    Label:
                        text: 'CARRIER CODE'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: carrier_code
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .10]
                    
                    Label:
                        text: 'TRANSPORT NUMBER'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: transport_number
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .10]
                    
                    Label:
                        text: 'WEIGHT(KG)'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: weight
                        multiline:False
                        font_size: 12
                        disabled: True 

            
            BoxLayout:
                orientation: 'vertical'
                size_hint: [.33, .10]
                pos_hint: {'center_x': 0.8}
                padding: 10

                Button:
                    text: "Process Entry"
                    on_press: root.submitData()

            
            
            