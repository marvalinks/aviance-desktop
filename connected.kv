#: kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex
<Connected>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.width, root.height

        BoxLayout:
            canvas:
                Color: 
                    rgba: hex('#f0f8ff')
                Rectangle:
                    size: self.size

            orientation: 'vertical'
            size_hint: [.3, 1]

            Image:
                source: './images/aviance.png'
                size_hint: [1, .3]

            StackLayout:
                orientation: 'lr-tb'
                spacing: 20
                padding: 10

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [1, .15]
                    
                    Label:
                        text: 'PORT'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: port_number
                        multiline:False
                        font_size: 28
                        text: "COM"
                    
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [1, .10]

                    Button:
                        text: "Read Weight"
                        on_press: root.readWeight()

                
            Button:
                text: "Disconnect"
                font_size: 24
                size_hint: [1, .15]
                on_press: root.disconnect()


        BoxLayout:
                
            orientation: 'vertical'

            BoxLayout:
                orientation: 'vertical'
                size_hint: [.78, .25]
                padding: 10
                spacing: 50

                Label:
                    text: "Data capture"
                    color: 0, 0, 0, 1
                    font_size: 35

            StackLayout:
                orientation: 'lr-tb'
                spacing: 20
                padding: 10

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .15]
                    
                    Label:
                        text: 'ULD NUMBER'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: uld_number
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .15]
                    
                    Label:
                        text: 'STATION CODE'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: station_code
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .15]
                    
                    Label:
                        text: 'DESTINATION CODE'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: destination_code
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .15]
                    
                    Label:
                        text: 'CARRIER CODE'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: carrier_code
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .15]
                    
                    Label:
                        text: 'TRANSPORT NUMBER'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: transport_number
                        multiline:False
                        font_size: 12
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [.33, .15]
                    
                    Label:
                        text: 'WEIGHT(KG)'
                        halign: 'left'
                        font_size: 16
                        color: 0, 0, 0, 1

                    TextInput:
                        id: weight
                        multiline:False
                        font_size: 12
                        disabled: True 

            
            BoxLayout:
                orientation: 'vertical'
                size_hint: [.33, .15]
                pos_hint: {'center_x': 0.8}
                padding: 10

                Button:
                    text: "Process Entry"
                    on_press: root.submitData()

            
            
            